   <%= link_to l(:label_edit), {:controller => 'type_custom_fields', :action => 'edit', :id => type.id}, {:class => 'icon icon-edit' } %>
   <%= link_to l(:label_delete), {:controller => 'type_custom_fields', :action => 'destroy', :id => type.id}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>

  </p>
  <p>
  	
  <%@custom_finded=LinkedCustomFields.find(:all, :conditions => {:tipologia => type.id})%>
  
    <%@padre=TypeCustomFields.find_by_id(type.figlia_di)%>
